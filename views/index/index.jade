extends ../layout
block content
    
    #carousel.carousel.slide(data-ride='carousel')
      // Indicators
      ol.carousel-indicators
        each carousel in carousels
          li.circle(data-target='#carousel')
      .carousel-inner(role='listbox')
        each carousel in carousels
          .item
            img.first-slide(src='#{carousel.img}', alt='#{carousel.name}')
            .container
              .carousel-caption
                h1 #{carousel.name}
                p #{carousel.content}  
                p
                  a.btn.btn-primary(href='#{carousel.url}', role='button') #{carousel.name}
        
      a.left.carousel-control(href='#carousel', role='button', data-slide='prev')
        span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
        span.sr-only Previous
      a.right.carousel-control(href='#carousel', role='button', data-slide='next')
        span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
        span.sr-only Next

    #main-content.container
      .row
        .col-md-5
          .panel.panel-default
            .panel-heading 新闻
            ul.list-group.news
              each news in newses 
                li.list-group-item(data-id='#{news._id}')
                  strong
                    em #{news.name}
                  p
                  p #{news.intro}
        .col-md-7
          .panel.panel-default
            .panel-heading项目
            ul.list-group.project
              each project in projects 
                li.list-group-item(data-id='#{project._id}') 
                  strong
                    em #{project.name}
                  p
                  p #{project.intro}