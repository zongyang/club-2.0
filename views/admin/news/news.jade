extends ../admin

block admin-content
  #admin-news
    .list
      button.btn.btn-primary.add-news 添加
      table.table.table-striped.table-bordered.table-hover
        thead
          tr
              th.text-center 名称
              th.text-center 内容概要
              th.text-center 添加日期
              th 
        tbody
          tr 
              td.options 
                span.glyphicon.glyphicon-edit
                span.glyphicon.glyphicon-remove
    .editor
      h3.text-center.text-primary 添加新闻
      button.btn.btn-primary.save 确定
      button.btn.btn-default.cancle 取消
      .input-group
        span.input-group-addon 新闻名称
        input.form-control.name(type='text')
      script#admin-news-editor(name='content', type='text/plain')